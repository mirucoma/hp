{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["src/gatsby-types.d.ts"]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2
  }
}
